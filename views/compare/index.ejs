<%- include('../partials/header') %>

<div class="container">
    <div class="jumbotron">
        <div class="container text-center">
            <h1>Avalanche Effect Demo </h1>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="card-body">
                <% if(mode==='key'){ %>
                    <form action="/compare/keys" method="POST" >
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label" for="algo"><h5>Encryption Algorithm :</h5></label>
                            <div class="col-sm-8">
                                <select name="algo" id="" class="form-control">
                                    <option value="blowfish" selected>Blowfish Algorithm</option>
                                    <option value="des">Data Encryption Algorithm</option>
                                </select>
                            </div>
                            
                        </div>
            
                        <div class="form-group row">
                            <label for="rounds" class="col-sm-4"><h5>Number of Rounds :</h5></label>
                            <div class="col-sm-8">
                                <select class="form-control" name="rounds">
                                    <option>1</option>
                                    <option>8</option>
                                    <option selected>16</option>
                                    <option>32</option>
                                </select>
                            </div>
                        </div>
            
                        <div class="form-group row">
                            <label for="ptxt" class="col-sm-4 col-form-label"><h5>Plaintext :</h5></label>
                            <div class="col-sm-8 col">
                                <textarea name="ptxt" id="" rows="4" class="form-control" placeholder="Enter 8 ASCII characters (64 bit block)">12345678</textarea>
                            </div>
                        </div>
            
                        <div class="form-group row">
                            <label for="key1" class="col-sm-4 col-form-label"><h5>Key1 :</h5></label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="key1" placeholder="Enter Key1" value="0F1571C947D9E859">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="key2" class="col-sm-4 col-form-label"><h5>Key :</h5></label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="key2" placeholder="Enter Key2" value="1F1571C947D9E859">
                            </div>
                        </div>
                        <button class="btn btn-warning btn-lg" type="submit" style="float: right;">Compare</button>
                    </form>
                <% }else{ %>
            
                    <form action="/compare/plaintexts" method="POST" >
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label" for="algo"><h5>Encryption Algorithm :</h5></label>
                            <div class="col-sm-8">
                                <select name="algo" id="" class="form-control">
                                    <option value="blowfish" selected>Blowfish Algorithm</option>
                                    <option value="des">Data Encryption Algorithm</option>
                                </select>
                            </div>
                            
                        </div>
            
                        <div class="form-group row">
                            <label for="rounds" class="col-sm-4"><h5>Number of Rounds :</h5></label>
                            <div class="col-sm-8">
                                <select class="form-control" name="rounds">
                                    <option>1</option>
                                    <option>8</option>
                                    <option selected>16</option>
                                    <option>32</option>
                                </select>
                            </div>
                        </div>
            
                        <div class="form-group row">
                            <label for="ptxt1" class="col-sm-4 col-form-label"><h5>Plaintext1 :</h5></label>
                            <div class="col-sm-8 col">
                                <textarea name="ptxt1" id="" rows="4" class="form-control" placeholder="Enter 8 ASCII characters (64 bit block)">12345678</textarea>
                            </div>
                        </div>
            
                        <div class="form-group row">
                            <label for="ptxt2" class="col-sm-4 col-form-label"><h5>Plaintext2 :</h5></label>
                            <div class="col-sm-8 col">
                                <textarea name="ptxt2" id="" rows="4" class="form-control" placeholder="Enter 8 ASCII characters (64 bit block)">02345678</textarea>
                            </div>
                        </div>
            
                        <div class="form-group row">
                            <label for="key" class="col-sm-4 col-form-label"><h5>Key :</h5></label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="key" placeholder="Enter Key" value="0F1571C947D9E859">
                            </div>
                        </div>
                    
                        <button class="btn btn-warning btn-lg" type="submit" style="float: right;">Compare</button>
                    </form>
            
                <% } %>
            </div>
        </div>

    </div>

</div>

<%- include('../partials/footer') %>