<%- include('../partials/header') %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1 style="text-align: center;">Decipher</h1>
            <form action="/des/decipher" method="POST">
                <div class="form-group">
                    <label for="des[rounds]">Number of Rounds: </label>
                    <select class="form-control" name="des[rounds]">
                        <option>1</option>
                        <option>8</option>
                        <option selected>16</option>
                        <option>32</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="des[halfwidth]">Half Width: </label>
                    <select class="form-control" name="des[halfwidth]" id="halfwidth">
                        <option>16</option>
                        <option selected>32</option>
                        <option>64</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="des[key]">Key</label>
                    <input type="text" class="form-control" name="des[key]" value="0F1571C947D9E859">
                </div>

                <div class="form-group">
                    <label for="des[ctxt]">Ciphertext</label>
                    <input class="form-control" type="text" name="des[ctxt]" value="DA02CE3A89ECAC3B">
                </div>
                <button class="btn btn-success" type="submit">Decipher</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>