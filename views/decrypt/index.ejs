<%- include('../partials/header') %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1 style="text-align: center;">Decryption</h1>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body">
            <form action="/decipher" method="POST" >
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="algo"><h5>Encryption Algorithm :</h5></label>
                    <div class="col-sm-8">
                        <select name="algo" id="" class="form-control">
                            <option value="blowfish" selected>Blowfish Algorithm</option>
                            <option value="des">Data Encryption Algorithm</option>
                        </select>
                    </div>
                    
                </div>

                <div class="form-group row">
                    <label for="mode" class="col-sm-4 col-form-label"><h5>Mode of Operation: </h5></label>
                    <div class="col-sm-8">
                        <select class="form-control" name="mode" id="mode">
                            <option value="cbc" selected>Cipher Block Chaining Mode</option>
                            <option value="ofb">Output Feedback Mode</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="rounds" class="col-sm-4"><h5>Number of Rounds :</h5></label>
                    <div class="col-sm-8">
                        <select class="form-control" name="rounds">
                            <option>1</option>
                            <option>8</option>
                            <option selected>16</option>
                            <option>32</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="ptxt" class="col-sm-4 col-form-label"><h5>Ciphertext :</h5></label>
                    <div class="col-sm-8 col">
                        <textarea name="ctxt" id="" rows="4" class="form-control" placeholder="Enter encrypted data...">35bc0f71916e69d2ee2b0af4a81d07f0</textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="key" class="col-sm-4 col-form-label"><h5>Key :</h5></label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" name="key" placeholder="Enter Key" value="0F1571C947D9E859">
                    </div>
                </div>
                <button class="btn btn-success btn-lg" type="submit" style="float: right;">Decipher</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>